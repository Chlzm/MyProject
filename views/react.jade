extend layout
block content
	body.container
		div#example
		script(type="text/javascript" src="src/js/lib/require.js")
		script(type="text/javascript").
			requirejs.config({
				//默认情况下模块所在目录为js/lib
				baseUrl: 'dest/js',
				//当模块id前缀为app时，他便由js/app加载模块文件
				//这里设置的路径是相对与baseUrl的，不要包含.js
				paths: {
					jquery: './lib/jquery-1.12.3.min',
					react: './lib/react',
					reactDom: './lib/react-dom',
					appReact : './app/react/react.min'
				}
			});
		script(type="text/javascript").
			requirejs(["appReact"]);
