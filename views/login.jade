extend layout
block content
    body(ng-app="myLogin" ng-controller="login")
        script(type="text/javascript" src="dest/js/lib/gt.min.js")
        script(type="text/javascript" src="dest/js/app/login/login.min.js")
        h2(align="center") 用户登录
        - if(message && message.length){
            p.bg-warning(align="center" style="height:30px;line-height:30px;") #{message}
        - }
        form.form-horizontal(role="form" action="/" method="post")
            input(type="hidden" name="_csrf" value="")
            div.form-group
                label.col-sm-2.control-label(for="fieldName") 用户名：
                .col-sm-4
                    input#fieldName.form-control(type="text" name="name" ng-model="name")
            div.form-group
                label.col-sm-2.control-label(for="fieldName") 密码：
                .col-sm-4
                    input#fieldName.form-control(type="password" name="password" ng-model="password")
            div.form-group
                label.col-sm-2.control-label &nbsp;
                #captcha.col-sm-4
            div.form-group
                label.col-sm-2.control-label
                .col-sm-4
                    input.btn.btn-primary(type="button" value="登录" ng-click="btnLogin()")